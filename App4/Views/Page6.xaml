<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             x:Class="App4.Views.Page6"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:listview="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
             >


    <StackLayout>
        <listview:SfListView x:Name="listviewdemo13" SelectionBackgroundColor="White" AutoFitMode="DynamicHeight" VerticalOptions="FillAndExpand"
HeightRequest="300" ItemSpacing="5,10,5,0" BackgroundColor="white" ItemTapped="listView_ItemTapped1">

            <listview:SfListView.ItemTemplate >

                <DataTemplate>

                    <Frame x:Name="frame" CornerRadius="10" HasShadow="True" Padding="5" BackgroundColor="#52226b" BorderColor="#52226b">
                        <Grid BackgroundColor="#52226b">
                            <Grid.GestureRecognizers>
                            </Grid.GestureRecognizers>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.RowSpan = "1"  HorizontalOptions="Center" VerticalOptions="Center" Text="{Binding ID}" TextColor="white" />


                            <StackLayout Grid.Row="0"
               Grid.Column="1" VerticalOptions="Center" Grid.RowSpan="2">
                                <Label FontAttributes="Bold" TextColor="white"
               Text="{Binding Fname}"/>

                                <Label FontAttributes="Bold" TextColor="white"
               Text="{Binding Sname}"
          />

                                <Label FontAttributes="Italic" TextColor="white"
               Text="Ongoing"
               />
                            </StackLayout>


                            <!--<StackLayout Grid.Row="0"
               Grid.Column="2" VerticalOptions="Center" Grid.RowSpan="2">
                            <Label  TextColor="Black"
               Text="{Binding sector}" VerticalOptions ="Start" FontAttributes="Bold"/>

                            <Label TextColor="Black"
               Text="{Binding Status}" FontAttributes="Italic" 
          />
                            <Label TextColor="Black"
               Text="{Binding Domicile}" FontAttributes="Italic" 
          />


                        </StackLayout>-->

                        </Grid>
                    </Frame>
                </DataTemplate>
            </listview:SfListView.ItemTemplate>
        </listview:SfListView>
    </StackLayout>
</ContentPage>