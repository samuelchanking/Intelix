        <listview:SfListView x:Name="listviewdemo2" ItemSize="100" HeightRequest="180" ItemSpacing="5,10,5,0" BackgroundColor="white" SelectionBackgroundColor="White" AutoFitMode="DynamicHeight">

            <listview:SfListView.ItemTemplate>

                <DataTemplate>

                    <Frame x:Name="frame" CornerRadius="10" HasShadow="True" Padding="5,5,5,5" BackgroundColor="OrangeRed" BorderColor="OrangeRed">
