                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Label Grid.RowSpan = "2" 
               HorizontalOptions="Center"
               VerticalOptions="Center" Text="{Binding TID, StringFormat = 'Trading ID : \{0\}'}" TextColor="White" />


                            <StackLayout Grid.Row="0"
               Grid.Column="1" VerticalOptions="Center" Grid.RowSpan="2">
                                <Label FontAttributes="Bold" TextColor="White"
               Text="{Binding TID, StringFormat = 'ID : \{0\}'}"/>

                                <Label FontAttributes="Bold" TextColor="White"
               Text="{Binding TType, StringFormat = 'Type : \{0\}'}"
          />

                                <Label FontAttributes="Italic" TextColor="White"
               Text="{Binding TAmount, StringFormat = 'Amount : \{0\}'}"
               />
                            </StackLayout>
                            <StackLayout Grid.Column="2" Grid.Row="1" Grid.RowSpan="1">
                                <Image Source="sec2.png" Scale="0.5">
                                </Image>
                            </StackLayout>

