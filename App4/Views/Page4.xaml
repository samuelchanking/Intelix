    <StackLayout>


        <Label Text="Flagged Activity" HorizontalOptions="Center" FontSize ="14" ></Label>
        <listview:SfListView x:Name="listviewdemo12" ItemSize="100" HeightRequest="180" ItemSpacing="5,10,5,0" BackgroundColor="white" SelectionBackgroundColor="White" AutoFitMode="DynamicHeight">

            <listview:SfListView.ItemTemplate>

                <DataTemplate>

                    <Frame x:Name="frame" CornerRadius="10" HasShadow="True" Padding="5,5,5,5" BackgroundColor="OrangeRed" BorderColor="OrangeRed">
                        <Grid BackgroundColor="OrangeRed">
                            <Grid.GestureRecognizers>
                            </Grid.GestureRecognizers>
                            <Grid.RowDefinitions>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition  Width="40"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.RowSpan = "1" 
               HorizontalOptions="Center"
               VerticalOptions="Center" Text="{Binding securityID, StringFormat = 'Security ID : \{0\}'}" TextColor="Black" />


                            <StackLayout Grid.Row="0"
               Grid.Column="1" VerticalOptions="Center" Grid.RowSpan="2">
                                <Label FontAttributes="Bold" TextColor="White"
               Text="{Binding price, StringFormat = 'Price : \{0\}'}" VerticalOptions="Start"/>

                                <Label FontAttributes="Bold" TextColor="White"
               Text="{Binding priceDate, StringFormat = 'Date : \{0\}'}" VerticalOptions="CenterAndExpand" HorizontalOptions="Start"
          />

                                <Label FontAttributes="Italic" TextColor="Black"
               Text="{Binding Currency, StringFormat = 'Currency : \{0\}'}" VerticalOptions="End"
               />
                            </StackLayout>
                            
                            <StackLayout Grid.Column="2" Grid.Row="0" >
                                <Image Source="sec2.png" Scale="0.5">
                                </Image>
                            </StackLayout>
                            <Label Grid.RowSpan = "1"  HorizontalOptions="Center" VerticalOptions="Center" Text="{Binding securityID, StringFormat = 'Security ID : \{0\}'}" TextColor="white" />


                           

                            <!--<StackLayout Grid.Row="0"
