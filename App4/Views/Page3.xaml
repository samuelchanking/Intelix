<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:listview="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
             NavigationPage.HasNavigationBar="false"
             Title="Hello"
             x:Class="App4.Views.Page3"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:cards="clr-namespace:Syncfusion.XForms.Cards;assembly=Syncfusion.Cards.XForms"
             Shell.NavBarIsVisible="False"
             xmlns:syncfusion="clr-namespace:Syncfusion.SfPullToRefresh.XForms;assembly=Syncfusion.SfPullToRefresh.XForms">

    <ScrollView>

        <StackLayout Padding="0,20,0,0"
                 Spacing="5">


            <ImageButton x:Name="__image_user"
					Source="__image_user.png"
                    Clicked="Button_Clicked3"
                   BackgroundColor="White"
                         
                    
                       />
            <Label x:Name="george"
					FontFamily="Open Sans"
					FontSize="36"
					TextColor="#52226B"
					Text="George"
                    HorizontalOptions="Center"
				 />
            <StackLayout  HorizontalOptions="Center" VerticalOptions="Center">
                <cards:SfCardView BorderColor="#52226B" BorderWidth="2" CornerRadius="10,10,10,10" BackgroundColor="white"  >
                    <StackLayout Padding="10, 10, 0, 0" >
                        <Label  Text="New York" FontSize="20"  TextColor="Black" />
                        <Label Text="Mon 3.00PM, Sunny" TextColor="Black"/>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="31*" FontSize="40" Padding="0, 0, 10,0"/>
                            <Image  Source="Sun.png" HeightRequest="50" WidthRequest="250"/>
                        </StackLayout>
                    </StackLayout>
                </cards:SfCardView>
            </StackLayout>

            <StackLayout>
                <listview:SfListView x:Name="listviewdemo4" SelectionBackgroundColor="White"  AutoFitMode="DynamicHeight" VerticalOptions="FillAndExpand"
HeightRequest="600" ItemSpacing="5,10,5,0" BackgroundColor="white" ItemTapped="listviewdemo4_ItemTapped">

                    <listview:SfListView.ItemTemplate >

                        <DataTemplate>

                            <Frame x:Name="frame" CornerRadius="10" HasShadow="True" Padding="5" BackgroundColor="#52226B" BorderColor="#52226b">
                                <Grid BackgroundColor="#52226b">
                                    <Grid.GestureRecognizers>
                                    </Grid.GestureRecognizers>
                                    <Grid.RowDefinitions>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="220"/>
                                        <ColumnDefinition  Width="40"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.RowSpan = "1"  HorizontalOptions="Center" VerticalOptions="Center" Text="{Binding time}" TextColor="white" />


                                    <StackLayout Grid.Row="0"
               Grid.Column="1" VerticalOptions="Center" Grid.RowSpan="1">
                                        <Label FontAttributes="Bold" TextColor="white"
               Text="{Binding table}" VerticalOptions="Start"/>

                                        <Label FontAttributes="Bold" TextColor="white"
               Text="{Binding ID}" VerticalOptions="Center" HorizontalOptions="Start"
          />
                                        <Label FontAttributes="Italic" TextColor="white"
               Text="{Binding text}" VerticalOptions="End"></Label>
                                    </StackLayout>
                                    <StackLayout Grid.Column="2" Grid.Row="0" >
                                        <Image Source="{Binding img}">
                                        </Image>
                                    </StackLayout>


                                    <!--<StackLayout Grid.Row="0"
               Grid.Column="2" VerticalOptions="Center" Grid.RowSpan="2">
                            <Label  TextColor="Black"
               Text="{Binding sector}" VerticalOptions ="Start" FontAttributes="Bold"/>

                            <Label TextColor="Black"
               Text="{Binding Status}" FontAttributes="Italic" 
          />
                            <Label TextColor="Black"
               Text="{Binding Domicile}" FontAttributes="Italic" 
          />


                        </StackLayout>-->

                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </listview:SfListView.ItemTemplate>
                </listview:SfListView>
            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>